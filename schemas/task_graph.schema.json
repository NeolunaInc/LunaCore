{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://neoluna.dev/schemas/task_graph.schema.json",
  "title": "TaskGraph",
  "type": "object",
  "required": [
    "plan_id",
    "tasks"
  ],
  "properties": {
    "plan_id": {
      "type": "string",
      "minLength": 1
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "type",
          "depends_on",
          "inputs",
          "outputs",
          "params"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "params": {
            "type": "object"
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "inputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "kind"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "kind": {
                  "enum": [
                    "input",
                    "output"
                  ]
                },
                "uri": {
                  "type": "string"
                },
                "media_type": {
                  "type": "string"
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "kind"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "kind": {
                  "enum": [
                    "input",
                    "output"
                  ]
                },
                "uri": {
                  "type": "string"
                },
                "media_type": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
